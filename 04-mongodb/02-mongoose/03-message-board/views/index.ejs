<body>
  <div class="container">
    <h3>Index.ejs</h3>
    <form action="/users" method="post">
    <label for="Name">Name</label>
    <input type="text" name='name'>
    <br>
    <label for="message">Message</label>
    <textarea name="message" rows="8" cols="40"></textarea>
    <br>
    <input type="submit" value="Submit">
    </form>
  </div>
  <div class="container">
      <% for (const user of users) { %>
        <p>Name: <%= user.name %></p>
        <p>Message: <%= user.message %></p>



        <% for (const comment of user.message){ %>
          <p><%="comment name: " + comment.name %></p>
          <p><%="comment text: " + comment.text %></p>
          <!-- <p><%="Comment message: " + comment.message %></p>
          <p><%="Comment comment: " + comment.comment %></p> -->

          <% } %>
          <form action='/comment/<%= user._id %>' method="post">              
            <input type="hidden" name="id" value="<%= user._id %>">

            <label for="name">Name</label>
            <input type="text" name='name'>
            <br> 

            <label for="comment">Comment</label>
						<textarea name="text"></textarea>
						<input type="submit" value="postComment">
          </form>
      <% } %>
